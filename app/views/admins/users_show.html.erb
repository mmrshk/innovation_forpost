
<p id="notice"><%= notice %></p>

<ul>
  <% if user_signed_in? %>
    <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
  <% else %>
    <li><%= link_to 'Register', new_user_registration_path %></li>
    <li><%= link_to 'sign in', new_user_session_path %></li>
  <% end %>
</ul>
  <% if super_admin? %>
    <h1>Users</h1>

    <table>
      <thead>
        <tr>
          <th>Id</th>
          
          <th>Email</th>
          <th>Tel.</th>
          <th>Role</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            
            <td><%= user.email %></td>
            <td><%= user.phone_number %></td>
            <td><%= user.role %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Delete', user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h1>Access dinied</h1>
    <h2>You should log in as a super_admin first!</h2>
  <% end %>
    <br>
    
    <%= link_to 'Add User', '#' %>
  <% if user_signed_in? %>
    <p>user:<%= @user.email %></p>
    <p>role:<%= @user.role %></p>
    <p>user's id: <%= @user.id %></p>
  <% end %>


