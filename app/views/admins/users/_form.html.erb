<%= simple_form_for(@user, url: url, method: method) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  

  <div class="field">
    <%= form.label     :email %>
    <%= form.email_field :email %>
  </div>  
  
  <div class="field">
    <%= form.label     :Telephone %>
    <%= form.telephone_field :phone_number %>
  </div>
  
  <div>
    <% if last_super_admin? %>
      <div class="last-super-admin-msg">You are a last super admin, leave yourself alive, please.</div>
    <% end %>

    <%= form.radio_button :role, User::USER_ROLES[:user], disabled: true %>
    <%= form.label :user, User::USER_ROLES[:user] %>
    <%= form.radio_button :role, User::USER_ROLES[:admin], disabled: true %>
    <%= form.label :admin, User::USER_ROLES[:admin] %>
    <%= form.radio_button :role, User::USER_ROLES[:super_admin], disabled: true %>
    <%= form.label :super_admin, User::USER_ROLES[:super_admin] %>
  </div>

  <div class="field">
    <%= form.label     :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label     :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
