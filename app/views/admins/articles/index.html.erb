<div class="container">
  <div class="articles-title">Articles</div>
  <div><%= link_to 'New Article', new_admins_article_path, class:'btn articles-button' %></div>
  <table>
    <thead>
      <tr>
        <td>Title</td>
        <td>Author</td>
        <td>Status</td>
        <td>Language</td>
        <td>Functions</td>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= link_to article.title, article_path(article, locale: :uk) %></td>
          <td><%= link_to article.user.email, '#' %></td>
          <td><%= article.status %></td>
          <td><%= article.language %></td>
          <td>
            <%= link_to fa_icon('eye', text: 'View'), article_path(article, locale: article.language.to_sym), class: "article-link" %> 
            <%= link_to fa_icon('edit', text: 'Edit'), edit_admins_article_path(article), class: "article-link" %> 
            <%= link_to fa_icon('trash', text: 'Delete'), admins_article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "article-link" %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
