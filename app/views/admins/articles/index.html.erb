<div class="container">
  <span class='button'><%= link_to 'New Article', new_admins_article_path %></span>
  <table>
    <thead>
      <tr>
        <td>Title</td>
        <td>Author</td>
        <td>Status</td>
        <td>Language</td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= link_to article.title, article_path(article, locale: :uk) %></td>
          <td><%= link_to article.user.email, '#' %></td>
          <td><%= article.status %></td>
          <td><%= article.language %></td>
          <td><%= link_to 'Show', article_path(article, locale: :uk) %></td>
          <td><%= link_to "Edit", edit_admins_article_path(article) %></td>
          <td><%= link_to "Delete", admins_article_path(article), method: :delete, 
                                                                data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
