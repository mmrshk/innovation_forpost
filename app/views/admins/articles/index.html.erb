<div class='body-container'>
  <div class='admin-article-group'>
  <h1 class='admin-article-title'>Articles</h1>
  <%= link_to 'New Article', new_admins_article_path, class:'admin-article-button text' %>
  </div>

  <div class="container-records-and-filters">
    <div class="container-records">
      <input class="browser-default records-per-page" type="number" value="10" step="10" min="10" id="number">
      <label class="label-records-per-page">records per page</label>
    </div>
    <%= render 'filter' %>
  </div>

  <div class='wrapper-table'>
    <div class='header-table'>
      <div class='header-cell'><%= link_to fa_icon('sort', text: 'Title', class:'fa-icon'), sort: "title" %></div>
      <div class='header-cell'><%= link_to fa_icon('sort', text: 'Author', class:'fa-icon'), sort: "user_id" %></div>
      <div class='header-cell'><%= link_to fa_icon('sort', text: 'Status', class:'fa-icon'), sort:"status" %></div>
      <div class='header-cell'><%= link_to fa_icon('sort', text: 'Lang.', class:'fa-icon'), sort:"language" %></div>
      <div class='header-cell'><%= link_to fa_icon('sort', text: 'Date', class:'fa-icon'), sort:"updated_at" %></div>
      <div class='header-cell'><span class=''>Functions<%= fa_icon('gear', class:'fa-icon-functions label')%></span></div>
    </div>
    <% @articles.each do |article| %>
      <div class='row-table js-table-accordions'>
        <button class="accordion" role="tab" aria-selected="false"><%= article.title %></button>
        <div class="cell"><%= link_to article.title, article_path(article, locale: article.language.to_sym) %></div>
        <div class="cell">
          <span class='hover-target', tabindex='0'><%= article.user.email %></span>
          <aside class='hover-popup'><%= article.user.email %></aside>
        </div>
        <div class="cell"><%= article.status %></div>
        <div class="cell"><%= article.language %></div>
        <div class="cell"><%= l(article.updated_at, format: '%d %b %Y') %></div>
        <div class="cell">
          <div class='button-functions-articles'>
            <%= link_to article_path(article, locale: article.language.to_sym), class: 'button-functions-articles' do %>
              <span><i class='material-icons'>remove_red_eye</i>View</span>
            <% end %>
            <%= link_to edit_admins_article_path(article), class: 'button-functions-articles' do %>
              <span><i class='material-icons'>edit</i>Edit</span>
            <% end %>
            <%= link_to admins_article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: 'button-functions-articles' do %>
              <span><i class='material-icons'>delete</i>Delete</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
  <%= render 'admins/users/pagination' %>
</div>

<%= javascript_pack_tag 'accordions' %>
