<div class='body-container'>
  <div class='admin-question-group'>
  <h1 class='admin-question-title'><%= 'Questions' %></h1>
  <%= link_to "Add question", new_question_path, class:'admin-question-button text' %>
  </div>


  <div class="container-records-and-filters">
      <div class="container-records">
        <%== pagy_items_selector_js(@pagy) %>
      </div>
  </div>

  <table class="body-table">
      <thead>
        <tr>
          <th class="title-table-user"> <%= sort_link(@q, :id, 'Id', default_order: :asc) %> </th>
          <th class="title-table-user"> <%= sort_link(@q, :title, "Title", default_order: :asc)%> </th>
          <th class="title-table-user"> <%= sort_link(@q, :user_email, "Email", default_order: :asc)%> </th>
          <th colspan="3", class="title-table-user">Functions <%= fa_icon('gear')%> </th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td class="field-table-user"><%= question.id %></td>
            <td class="field-table-user"><%= question.title %></td>
            <td class="field-table-user"><%= question.user_email %></td>
            <td class="field-table-user button-functions"><%= link_to fa_icon('eye', text: 'View'), admins_question_path(question), class: "button-functions" %></td>
            <td class="field-table-user button-functions"><%= link_to fa_icon('edit', text: 'Edit'), edit_admins_question_path(question), class: "button-functions" %></td>
            <td class="field-table-user button-functions"><%= link_to fa_icon('trash', text: 'Delete'),admins_question_path(question), method: :delete, data: { confirm: 'Are you sure?' }, class: "button-functions" %></td>
          </tr>
        <% end %>
      </tbody>
  </table>

 <%== render partial: 'shared/pagination', locals: {pagy: @pagy} %>

</div>
