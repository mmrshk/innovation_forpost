<%= content_for :js do %>
  <script async charset="utf-8" src="//cdn.embedly.com/widgets/platform.js"></script>
<% end %>

<% content_for :js_snippet do %>
  <% javascript_pack_tag 'ckeditor_embed_snippet' %>
<% end %>

<div class='container'>
  <div class='articles-tags'>
    <ul class='articles-list'>
      <% @articles.each do |article| %>
        <li>
          <div class='article-date'><%= date_as_month_and_year(article.created_at) %></div> 
          <div><%= link_to article.title, article_path(article), class: 'article-title' %></div>
          <div class='ck-content'><%= sanitize truncate(article.text, escape: false, length: 500,) { link_to 'Continue', article_path(article) } %></div>
          <div>Tags:
            <% article.tags.each do |tag| %>
              <%= link_to tag.name, tag_path(tag) %>
            <% end %>
          </div>
        </li>
      <hr class='article-hr'>
      <% end %>
    </ul>

    <ul class='tag-links vertical short'>
      <% @tags.each do |tag| %>
        <li class='tag-links-item'><%= link_to tag.name, tag_path(tag), class: 'a' %>
      <% end %>
  </ul>
  </div>
</div>
