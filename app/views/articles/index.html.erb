<span class='button'><%= link_to 'New Article', new_article_path %></span></p>
<table>
<thead>
  <tr>
    <td>Title</td>
    <td>Autor</td>
    <td>Status</td>
    <td>Language</td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
</thead>
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article %></td>
      <td><%= link_to article.user.email, '#' %></td>
      <td><%= article.status %></td>
      <td><%= article.language %></td>
      <td><%= link_to 'Show', article %></td>
      <td><%= link_to "Edit", edit_article_path(article) %></td>
      <td><%= link_to "Delete", article_path(article), :confirm => "Are you sure?", :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @articles %>