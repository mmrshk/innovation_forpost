<div class="path-attachment"><%= link_to "Add attachment", new_admin_attachment_path, class: 'path-new-attachment' %></div>
<table class="table-attachment">
  <thead>
    <tr>
      <th class="title-attachment">ID</th>
      <th class="title-attachment">Name</th>
      <th class="title-attachment">Image</th>
      <th class="title-attachment">Links</th>
    </tr>
  </thead>
  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td class="title-attachment"><%= attachment.id %></td>
        <td class="title-attachment"><%= attachment.name %></td>
        <td class="title-attachment"> 
          <%= image_tag attachment.media_file.variant(resize: "200x200"), skip_pipeline: true if attachment.media_file.attached? %>
        </td>
        <td class="title-attachment">
          <%= link_to "Show", admin_attachment_path(attachment), class: "attachment-link" %> 
          <%= link_to "Edit", edit_admin_attachment_path(attachment), class: "attachment-link" %> 
          <%= link_to "Delete", admin_attachment_path(attachment), method: :delete, class: "attachment-link" %> 
        </td>
      </tr>
    <% end %>  
  </tbody>
</table> 
