<%= @question.errors.full_messages %>
    
<%= simple_form_for @question do |form| %>
  <%= form.input :title, label: 'Title' %>
  <%= form.input :body, label: 'Body' %>
  <%= form.input :user_name, label: 'Name' %>
  <%= form.input :user_email, label: 'Email' %>
  <%= form.button :submit, class: "btn-primary"%>
<% end %>
